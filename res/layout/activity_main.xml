<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btn_show_ad"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="popup1 load display" />

    <Button
        android:id="@+id/btn_show_ad_dev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_show_ad"
        android:layout_alignRight="@+id/btn_show_ad"
        android:layout_below="@+id/btn_show_ad"
        android:layout_marginTop="10dp"
        android:text="popup2 load reward" />

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_show_ad_dev"
        android:layout_alignRight="@+id/btn_show_ad_dev"
        android:layout_below="@+id/btn_show_ad_dev"
        android:layout_marginTop="10dp"
        android:text="show display" />
    
    <Button
        android:id="@+id/btn_show_video_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_show_ad_dev"
        android:layout_alignRight="@+id/btn_show_ad_dev"
        android:layout_below="@+id/btn_clear"
        android:layout_marginTop="10dp"
        android:text="show reward ad" />

    <ImageView android:contentDescription="@string/img_logo"
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bgTop"
        android:adjustViewBounds="true"
        android:maxHeight="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/bgBottom" android:contentDescription="@string/bg_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:scaleType="center"
        android:src="@drawable/bg_bottom" />

	<TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/version_number"
        android:paddingBottom="12dp"
        android:paddingRight="20dp"
        android:textColor="@color/white" />

    <ImageView android:contentDescription="@string/bg_top"
        android:id="@+id/bgTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="center"
        android:src="@drawable/bg_top" />

</RelativeLayout>